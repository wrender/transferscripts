[Unit]
Description=syncregistry application
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
User={{ cfg.systemduser }}
Group={{ cfg.systemduser }}
Restart=always
ExecStart=/usr/bin/python3 /opt/sync_registry/main.py
Environment=PYTHONPATH=/opt/sync_registry/

[Install]
WantedBy=multi-user.target
